{
  "extends": "@app/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
