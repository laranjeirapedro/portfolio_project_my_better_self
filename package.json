{
  "name": "truco-frontend",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",
    "truco:fe": "dotenv -- turbo dev --filter=truco-fe",
    "truco:cms": "dotenv -- turbo dev --filter=truco-cms",
    "truco:cms:deploy": "dotenv -- turbo run deploy --filter=truco-cms",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@app/eslint-config": "*",
    "@app/typescript-config": "*",
    "dotenv-cli": "latest",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@sanity/color-input": "^3.1.1"
  }
}
